<UserControl x:Class="Mushrooms.SceneBuilder.SceneEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModelLocator="clr-namespace:ReusableBits.Wpf.ViewModelLocator;assembly=ReusableBits.Wpf"
             xmlns:sceneBuilder="clr-namespace:Mushrooms.SceneBuilder"
             xmlns:models="clr-namespace:Mushrooms.Models"
             viewModelLocator:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance sceneBuilder:SceneEditorViewModel, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate x:Key="PlanTemplate" DataType="{x:Type models:ScenePlan}">
            <TextBlock Text="{Binding PlanName}"/>
        </DataTemplate>

        <DataTemplate x:Key="LightingTemplate" DataType="{x:Type sceneBuilder:LightingItem}">
            <TextBlock Text="{Binding DisplayName}"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical">
            <Label Style="{StaticResource LabelStyle}" Content="Plans:"/>
            <ListView ItemsSource="{Binding Plans}" ItemTemplate="{StaticResource PlanTemplate}"
                      SelectedItem="{Binding SelectedScene}"/>
        </StackPanel>
        
        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Vertical">
            <Label Style="{StaticResource LabelStyle}" Content="Lighting:"/>
            <ListView ItemsSource="{Binding LightingList}" ItemTemplate="{StaticResource LightingTemplate}"
                      SelectionMode="Multiple">
                <ListView.Resources>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ListView.Resources>
            </ListView>
        </StackPanel>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Style="{StaticResource LabelStyle}" VerticalAlignment="Center" Margin="15,0,0,0"
                   Content="Scene Name:"/>
            <TextBox Grid.Column="1" Text="{Binding SceneName, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Command="{Binding CreateScene}"
                Content="Create Scene"/>
    </Grid>
</UserControl>
